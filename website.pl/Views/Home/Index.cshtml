@{
    ViewData["Title"] = "Dashboard";
}

<div class="container-fluid py-4">
    <!-- Welcome Banner -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card bg-primary text-white shadow-sm border-0">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h1 class="display-5 mb-0">Welcome to Company Management System</h1>
                            <p class="lead mb-0">Manage your organization efficiently in one place</p>
                        </div>
                        <div class="d-none d-md-block">
                            <i class="fa fa-building fa-4x opacity-50"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Stats -->
    <div class="row mb-4">
        <div class="col-md-4 mb-3 mb-md-0">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-1">Total Employees</h6>
                            <h3 class="mb-0">@ViewBag.EmployeeCount</h3>
                        </div>
                        <div class="bg-primary bg-opacity-10 p-3 rounded">
                            <i class="fa fa-users fa-2x text-primary"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-transparent border-0">
                    <a href="@Url.Action("Index", "employee")" class="text-decoration-none stretched-link">
                        View all <i class="fa fa-arrow-right ms-1 small"></i>
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3 mb-md-0">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-1">Departments</h6>
                            <h3 class="mb-0">@ViewBag.DepartmentCount</h3>
                        </div>
                        <div class="bg-success bg-opacity-10 p-3 rounded">
                            <i class="fa fa-building fa-2x text-success"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-transparent border-0">
                    <a href="@Url.Action("Index", "department")" class="text-decoration-none stretched-link">
                        View all <i class="fa fa-arrow-right ms-1 small"></i>
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-1">Active Employees</h6>
                            <h3 class="mb-0">@ViewBag.ActiveEmployeeCount</h3>
                        </div>
                        <div class="bg-info bg-opacity-10 p-3 rounded">
                            <i class="fa fa-user-check fa-2x text-info"></i>
                        </div>
                    </div>
                </div>
                <!-- Footer removed for view-only -->
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="mb-0"><i class="fa fa-bolt me-2"></i>Quick Actions</h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-4">
                            <a href="@Url.Action("create", "employee")" class="btn btn-outline-primary w-100 py-3">
                                <i class="fa fa-user-plus mb-2 d-block fa-2x"></i>
                                Add Employee
                            </a>
                        </div>
                        <div class="col-md-4">
                            <a href="@Url.Action("create", "department")" class="btn btn-outline-success w-100 py-3">
                                <i class="fa fa-plus-circle mb-2 d-block fa-2x"></i>
                                Add Department
                            </a>
                        </div>
                        <div class="col-md-4">
                            <a href="@Url.Action("Index", "employee")" class="btn btn-outline-info w-100 py-3">
                                <i class="fa fa-search mb-2 d-block fa-2x"></i>
                                Search Employees
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
