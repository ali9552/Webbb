@model IEnumerable<employee>
@{
    ViewData["Title"] = "Department Employees";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-10 offset-md-1">
            <div class="card shadow">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h3 class="mb-0">Employees of @ViewData["department"] Department</h3>
                    <a asp-action="index" class="btn btn-light">Back to Departments</a>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover table-striped">
                            <thead class="table-light">
                                <tr>
                                    <th>Employee Name</th>
                                    <th>Email</th>
                                    <th>Age</th>
                                    <th>MoreDetails</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var employee in Model)
                                {
                                    <tr>
                                        <td>@employee.name</td>
                                        <td>@employee.email</td>
                                        <td>@employee.age</td>
                                        <td>
                                            <a asp-controller="employee" asp-action="details" asp-route-id="@employee.id" class="btn btn-sm btn-dark">
                                                <i class="bi bi-info-circle"></i> Details
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    @if (!Model.Any())
                    {
                        <div class="alert alert-info text-center mt-3">
                            No employees found for this department.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

