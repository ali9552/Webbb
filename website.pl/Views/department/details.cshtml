@model detailsdto

@{
    ViewData["Title"] = "Department Details";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">Department Details</h3>
                </div>
                <div class="card-body">
                    <div class="form-group mb-3">
                        <label asp-for="id" class="form-label fw-bold">ID</label>
                        <input asp-for="id" class="form-control" readonly />
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="code" class="form-label fw-bold">Code</label>
                        <input asp-for="code" class="form-control" readonly />
                    </div>

                    <div class="form-group mb-4">
                        <label asp-for="name" class="form-label fw-bold">Name</label>
                        <input asp-for="name" class="form-control" readonly />
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="index" class="btn btn-secondary">Back to List</a>
                        <div>
                            <a asp-route-id="@Model.id" asp-action="update" class="btn btn-warning me-2">Edit</a>
                            <a asp-route-id="@Model.id" asp-action="employees" class="btn btn-success">Show Employees</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


