@using website.pl.dtos.roledto
@model IEnumerable<roleviewdto>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-0 rounded-lg">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h2 class="mb-0"><i class="fa fa-users me-2"></i>Roles</h2>
                    <a class="btn btn-light btn-sm" asp-action="Create">
                        <i class="fa fa-plus me-1"></i> Create Role
                    </a>
                </div>
                <div class="card-body p-4">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover align-middle mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Role Name</th>
                                        <th>Role ID</th>
                                        <th class="text-center">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var role in Model)
                                    {
                                        <tr>
                                            <td>@role.name</td>
                                            <td>@role.id</td>
                                            <td class="text-center">
                                                <div class="d-flex justify-content-center gap-2">
                                                    <a class="btn btn-sm btn-warning text-white" asp-action="Edit" asp-route-id="@role.id">
                                                        <i class="fa fa-edit me-1"></i> Edit
                                                    </a>
                                                    <a class="btn btn-sm btn-info text-white" asp-action="Details" asp-route-id="@role.id">
                                                        <i class="fa fa-eye me-1"></i> Details
                                                    </a>
                                                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@role.id">
                                                        <i class="fa fa-trash me-1"></i> Delete
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="fa fa-info-circle me-2"></i> No roles found.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
