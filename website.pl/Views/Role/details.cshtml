@model roleviewdto

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-0 rounded-lg">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h2 class="mb-0"><i class="fa fa-user-shield me-2"></i>Role Details</h2>
                    <div>
                        <a class="btn btn-light btn-sm" asp-action="Edit" asp-route-id="@Model.id">
                            <i class="fa fa-edit me-1"></i> Edit Role
                        </a>
                        <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@Model.id">
                            <i class="fa fa-trash me-1"></i> Delete Role
                        </a>
                    </div>
                </div>
                <div class="card-body p-4">
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <label class="form-label text-muted">Role Name</label>
                            <input type="text" class="form-control" value="@Model.name" readonly />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
