@model resetdto
@{
  
    Layout = "~/Views/Shared/accountlayout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-body p-4">
                    <div class="text-center mb-4">
                        <h2 class="text-primary">Reset Password</h2>
                        <p class="text-muted">Enter your new password below</p>
                    </div>

                    @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

                    <form asp-action="resetpassword" method="post" class="needs-validation" novalidate>
                        <div class="form-floating mb-3">
                            <input class="form-control" type="password" id="password" asp-for="password" placeholder="New Password" required />
                            <label for="password">New Password</label>
                            <span asp-validation-for="password" class="text-danger"></span>
                            <div class="invalid-feedback">Password is required.</div>
                        </div>

                        <div class="form-floating mb-3">
                            <input class="form-control" type="password" id="confirmpassword" asp-for="confirmpassword" placeholder="Confirm Password" required />
                            <label for="confirmpassword">Confirm Password</label>
                            <span asp-validation-for="confirmpassword" class="text-danger"></span>
                            <div class="invalid-feedback">Please confirm your password.</div>
                        </div>

                        <div class="d-grid gap-2 mt-4">
                            <button type="submit" class="btn btn-primary btn-lg rounded-pill">
                                <i class="bi bi-shield-lock-fill me-2"></i>Reset Password
                            </button>
                        </div>

                        <div class="text-center mt-3">
                            <a asp-controller="Account" asp-action="Login" class="text-decoration-none">Back to login</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.querySelector("form").addEventListener("submit", function (e) {
            const pass = document.getElementById("password");
            const confirm = document.getElementById("confirmpassword");

            if (!pass.value) {
                pass.classList.add("is-invalid");
                e.preventDefault();
            } else {
                pass.classList.remove("is-invalid");
            }

            if (!confirm.value || confirm.value !== pass.value) {
                confirm.classList.add("is-invalid");
                e.preventDefault();
            } else {
                confirm.classList.remove("is-invalid");
            }
        });
    </script>
}
