@model logindto
@{
    ViewData["Title"] = "Login";
	var messge = TempData["message"];
    Layout = "~/Views/Shared/accountlayout.cshtml";
}



<h1>Login</h1>
<h2 class="alert-primary "> @messge</h2>


<form action="login" method="post">

	@Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })
	<input class="text email" asp-for="emailorusername" placeholder="Email or UserName" required=""> <br></br>
	<input class="text" asp-for="password" placeholder="Password" required="">
	
	
	<input type="submit" value="Login">
</form>
<p>Don't have an Account? <a asp-action="signup"> signup Now!</a></p>
<p> <a asp-action="forgetpassword"> Forget Password!</a></p>




