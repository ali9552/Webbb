@model userdto
@{
    ViewData["Title"] = "Edit User";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <form asp-action="Edit" asp-route-id="@Model.id" method="post">
                <div class="card shadow-sm border-0 rounded-lg">
                    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                        <h2 class="mb-0"><i class="fa fa-user me-2"></i>Edit Employee</h2>
                    </div>

                    <div class="card-body p-4">
                        @* Validation Summary *@
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <input type="hidden" asp-for="id" />

                        <div class="row mb-4">
                            <div class="col-md-3 text-center">
                                <div class="bg-light rounded-circle d-flex align-items-center justify-content-center" style="width: 150px; height: 150px; margin: 0 auto;">
                                    <i class="fa fa-user fa-4x text-secondary"></i>
                                </div>
                            </div>
                            <div class="col-md-9">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="username" class="form-label text-muted">
                                                <i class="fa fa-user me-1"></i>Username
                                            </label>
                                            <input asp-for="username" class="form-control" />
                                            <span asp-validation-for="username" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="email" class="form-label text-muted">
                                                <i class="fa fa-envelope me-1"></i>Email
                                            </label>
                                            <input asp-for="email" type="email" class="form-control" />
                                            <span asp-validation-for="email" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <hr />

                        <div class="row">
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="fname" class="form-label text-muted">
                                        <i class="fa fa-calendar-alt me-1"></i>First Name
                                    </label>
                                    <input asp-for="fname" class="form-control" />
                                    <span asp-validation-for="fname" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="lname" class="form-label text-muted">
                                        <i class="fa fa-dollar-sign me-1"></i>Last Name
                                    </label>
                                    <input asp-for="lname" class="form-control" />
                                    <span asp-validation-for="lname" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label class="form-label text-muted">
                                        <i class="fa fa-id-badge me-1"></i>User ID
                                    </label>
                                    <input class="form-control" value="@Model.id" readonly />
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fa fa-arrow-left me-1"></i> Back to List
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fa fa-save me-1"></i> Save Changes
                            </button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
